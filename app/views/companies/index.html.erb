<h2>All Companies</h2>

<ul>
  <% @companies.each do |company| %>
    <li><%= link_to "#{company.name}", company %></li>
    <%= link_to("Delete", company,
        method: :delete, 
        data: { confirm: "Are you sure?" }) 
        %>
  <% end %>
</ul>

<%= link_to "New company?", new_company_path %>